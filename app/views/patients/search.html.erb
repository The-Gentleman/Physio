<div class="search_patients-container">
<h3>Look up a patient to see what office they're in.</h3>

    <%= form_tag(search_path, method: 'get') do %>
        <%= label_tag(:q, "Patient Name:") %>
        <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
    <% end %>

    <br></br>
    <% if @patient  %>
        <% @patient.each do |patient| %>
            <% if current_user.patients.include?(patient) %>
                <%=  patient.office.city %>, <%= patient.office.state %>
            <% end %>
        <% end %>
    <% end %>

</div>